<>
  a owl:Ontology ;
  owl:versionInfo "0.1" ;
  owl:versionIRI <> ;
  rdfs:label "OSH meta-data"@en ;
  rdfs:comment   "Open Source Hwardware meta-data - Base Ontology"@en ;
  terms:contributor "Martin HÃ¤uer <martin.haeuer@ose-germany.de>" ;
