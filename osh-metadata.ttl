# Classes

# Make commonly used classes inherit their WikiData counterparts,
# so we can use meaningful names,
# instead of the cryptic WikiData Property numbers.

#a owl:ObjectProperty ;
#a owl:DatatypeProperty ;

oshm:Class
  a owl:Class ;
  rdfs:subClassOf wdp:P2308 ;
  .

oshm:name
  a owl:DatatypeProperty ;
  rdfs:subClassOf wdp:P2561 ;
  rdfs:domain oshm:Module ;
  rdfs:cardinality 1 ;
  .

oshm:image
  a owl:DatatypeProperty ;
  rdfs:subClassOf wdp:P4765 ;
  rdfs:domain oshm:Module ;
  .

oshm:url
  a owl:DatatypeProperty ;
  rdfs:subPropertyOf wdp:P2699 ;
  .

oshm:referenceUrl
  a owl:DatatypeProperty ;
  rdfs:subPropertyOf wdp:P854 ;
  .

oshm:fileFormat
  a owl:DatatypeProperty ;
  rdfs:subPropertyOf wdp:P2701 ;
  .

oshm:function
  a owl:DatatypeProperty ;
  rdfs:subPropertyOf wdp:P7535 ; # aka scopeAndContent
  rdfs:domain oshm:Module ;
  rdfs:comment '''
    functional description, e.g. what it actually does, what problem it solves, for whom, under which conditions etc.
    so if you whish that someone finds & uses your OSHM specifically e.g. for COVID-19-crisis response, include relevant keywords in this field
    optional: description of input, output and interfaces'''@en ;
  .

oshm:functionalMetadata
  a owl:DatatypeProperty ;
  rdfs:subPropertyOf wdp:P8203 ; # aka supportedMetadata
  rdfs:domain oshm:Module ;
  .

oshm:language
  a owl:DatatypeProperty ;
  rdfs:subPropertyOf wdp:P305 ; # aka IETFLanguageTag
  .

oshm:spdxLicenseIdentifier
  a owl:DatatypeProperty ;
  rdfs:subPropertyOf wdp:P2479 ;
  .

oshm:softwareVersionIdentifier
  a owl:DatatypeProperty ;
  rdfs:subPropertyOf wdp:P348 ;
  .

oshm:copyrightHolder
  a owl:DatatypeProperty ;
  rdfs:subPropertyOf wdp:P3931 ;
  rdfs:domain oshm:Module ;
  .

oshm:quantity
  a owl:DatatypeProperty ;
  rdfs:subPropertyOf wdp:P1114 ;
  .

oshm:3dModel
  a owl:DatatypeProperty ;
  rdfs:subPropertyOf wdp:P4896 ;
  .

oshm:versionType
  a owl:DatatypeProperty ;
  rdfs:subPropertyOf wdp:P548 ;
  .

oshm:technicalDrawing
  a owl:ObjectProperty ;
  rdfs:subPropertyOf wdq:Q192521 ;
  # FIXME This is a Qualifier, not a Property! it is not in the wkdp namespace, therefore wdkq (SO FAR UNDEFINED)
  .

oshm:technicalStandard
  a owl:ObjectProperty ;
  rdfs:subPropertyOf wdq:Q317623 ;
  .

oshm:openStandard
  a owl:ObjectProperty ;
  rdfs:subPropertyOf wdq:Q681263 ;
  .

# [External Identifier](https://www.wikidata.org/wiki/Wikidata:External_identifiers)
oshm:externalIdentifier
  a owl:ObjectProperty ;
  rdfs:subPropertyOf wd:External_identifiers ;
  .





oshm:projectVersionIdentifier # aka okhv
  a owl:DatatypeProperty ;
#  rdfs:subPropertyOf rdfs:subClassOf ;
  rdfs:domain oshm:Module, oshm:Piece ;
  rdfs:range oshm:ReferenceUrl ;
  rdfs:cardinality 1 ;
  .

oshm:alternativeLicense
  a owl:DatatypeProperty ;
#  rdfs:subPropertyOf rdfs:subClassOf ;
  rdfs:domain oshm:Module ;
  rdfs:range oshm:ReferenceUrl ;
  rdfs:cardinality 1 ;
  rdfs:comment '''
    URL to legal code of the license (e.g. LICENSE.md),
    in case no SPDX identifier exists'''@en ;
  .



oshm:Module
  a oshm:Class ;
  rdfs:label "Open Source Hardware Module"@en ;
  .

oshm:Piece
  a oshm:Class ;
  rdfs:label "Piece of Open Source Hardware"@en ;
  .

oshm:StandardComponent
  a oshm:Class ;
  rdfs:label "Standard Component"@en ;
  .

oshm:PurchasedComponent
  a oshm:Class ;
  rdfs:label "Purchased Component"@en ;
  .

